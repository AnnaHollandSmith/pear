<%= bootstrap_form_for @user, url: profile_path(current_user), method: "patch" do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.text_area :about_me, rows: 4, label: "Tell us a bit about yourself" %>
  <%= f.text_field :tag_list, label: "What skills do you have?" %>
  <%= f.text_area :current_project, rows: 4, label: "What are you working on?" %>
  <%= f.text_field :github_repo, label: "Link to your project's GitHub repository" %>
  <%= f.submit 'Update Profile' %>
<% end %>
<script>
  $('#user_tag_list').tagsInput();
</script>
